FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "${FOAM_CASE}/constant/parameters"

solvers
{
    p
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       $tol;
        relTol          0;
    }

    "(U|k|epsilon)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       $tol;
        relTol          0;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    c2              $c2;
    pRefCell        0;
    pRefValue       0;

    residualControl
    {
        p               $tol;
        U               $tol;
        "(k|epsilon)"   $tol;
    }
}

PISO
{
    nCorrectors     1;
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;
}

relaxationFactors
{
    equations
    {
        ".*"            1;
    }
}


