#!/bin/sh
re=$(foamDictionary -entry re -value constant/parameters)
case $re in
  100)   col="2";;
  1000)  col="3";;
  5000)  col="4";;
  10000) col="5";;
  *)     echo "Data is not available for Re=$re" \
      && echo "Accceptable values are: 100, 1000, 5000, 10000" \
      && exit 1;;
esac

#lt=$(foamListTimes -latestTime -processor | tail -1)
lt=$(foamListTimes -latestTime | tail -1)
cp postProcessing/singleGraph/$lt/horizontal_U.xy plots/
cp postProcessing/singleGraph/$lt/vertical_U.xy plots/

gnuplot<<EOF
    set terminal pdf enhanced color
    set output "plots/uvelocity.pdf"
    set ylabel "y (m)"
    set xlabel "U_x (m/s)"
    set title  "Velocity fluctuations at the middle in x-dir. with Re=$re"
    set grid
    set key right bottom

    plot "plots/vertical_U.xy" u 2:1 t "Numerical" w l, \
         "plots/yu" u $col:1 w p ls 22 t "Ghia"
EOF

gnuplot<<EOF
    set terminal pdf enhanced color
    set output "plots/vvelocity.pdf"
    set xlabel "x (m)"
    set ylabel "U_y (m/s)"
    set title  "Velocity fluctuations at the middle in y-dir. with Re=$re"
    set grid
    set key top right

    plot "plots/horizontal_U.xy" u 1:3 t "Numerical" w l, \
         "plots/xv" u 1:$col w p ls 22 t "Ghia"
EOF
